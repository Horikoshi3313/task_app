<h2>スケジュール編集</h2>

<%= form_for @user do |f| %>
    <table>
        <tr>
            <th><%= f.label :title ,"タイトル" %></th>
            <td><%= f.text_field :title %></td>
        </tr>
        <tr>
            <th><%= f.label :start ,"開始日" %></th>
            <td><%= f.datetime_field :start %></td>
        </tr>
        <tr>
            <th><%= f.label :end ,"終了日" %></th>
            <td><%= f.datetime_field :end %></td>
        </tr>
        <tr>
        <th><%= f.label :member ,"メンバー" %></th>
        <td><%= f.text_field :member %></td>
        </tr>
        <tr>
            <th><%= f.label :text ,"備考欄" %></th>
            <td><%= f.text_area :text %></td>
        </tr>
    </table>
    <div>
        <ul>
            <li><%= f.submit "スケジュール編集を完了する" %></li>
            <li><%= link_to "スケジュール一覧に戻る", :users %></li>
        </ul>
    </div>
<% end %>