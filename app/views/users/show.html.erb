<h2>スケジュール詳細</h2>
 
      <table>
        <tr>
          <th>タイトル</th>
          <td><%= @user.title %></td>
        </tr>
 
        <tr>
          <th>開始日</th>
          <td><%= @user.start.to_s(:datetime_jp) %><td>
        </tr>
 
        <tr>
          <th>終了日</th>
          <td><%= @user.end.to_s(:datetime_jp) %><td>
        </tr>
        
        <tr>
          <th>メンバー</th>
          <td><%= @user.member %></td>
        </tr>

        <tr>
          <th>備考</th>
          <td><%= @user.text %></td>
        </tr>
      </table>
 
      <div>
        <ul>
          <li><%= link_to "スケジュール情報一覧に戻る", :users %></li>
        </ul>
      </div>